{
  "name": "pokedex",
  "version": "1.0.0",
  "description": "Simple pokedex using ReactJS",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ramon-ferreira/pokedex.git"
  },
  "keywords": [
    "pokedex",
    "reactjs",
    "typescript",
    "pokemon",
    "javascript",
    "html",
    "spa",
    "responsive",
    "react"
  ],
  "author": "Ramon Ferreira",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ramon-ferreira/pokedex/issues"
  },
  "homepage": "https://github.com/ramon-ferreira/pokedex#readme",
  "scripts": {
    "run_webpack": "npm webpack --config ./config/webpack.config.js",
    "run_eslint": "npm eslint ./src",
    "start": "npm run_webpack --watch  --mode=development",
    "build": "npm run_webpack --mode=production",
    "test": "npm jest --config ./config/jest.config.js",
    "lint": "npm run_eslint --max-warnings 0",
    "lint:fix": "npm run_eslint --fix"
  },
  "dependencies": {
    "@babel/core": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-react": "^7.24.6",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-react": "^7.34.2",
    "html-webpack-plugin": "^5.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1",
    "react-test-renderer": "^18.3.1",
    "sass": "^1.77.4",
    "sass-loader": "^14.2.1",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-plugin-serve": "^1.6.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "standard"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ]
    },
    "globals": {
      "test": "readonly",
      "expect": "readonly"
    }
  }
}
